<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mina kurser</title>
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <header>
        <ul>
            <li><a href="/" class="current">Mina kurser</a></li>
            <li><a href="/add">Lägg till kurs</a></li>
            <li><a href="/about">Om</a></li>
        </ul>
    </header>
    <h1>Mina kurser</h1>
    <section class="course-list">
        <article>
            <% courses.forEach(course => { %>
                <div class="course-item">
                    <p class="course-text">
                        <strong><%= course.coursecode %></strong> – 
                        <%= course.coursename %> 
                        (<%= course.progression %>) –
                        <a href="<%= course.syllabus %>" target="_blank">Kursplan</a>
                    </p>
                    <form action="/delete/<%= course.id %>" method="POST">
                        <button type="submit" title="Radera kurs" class="delete-btn">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </div>                
            <% }) %>
        </article>
    </section>  
</body>
</html>